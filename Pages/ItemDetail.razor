@page "/itemdetail/{Id}"

<h1>Todo for @Item.Title</h1>

<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <label class="col-md-4">Id</label>
            <div class="col-md-8">
                <label class="form-control">@Item.Id</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4">Title</label>
            <div class="col-md-8">
                <label class="form-control">@Item.Title</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4">Description</label>
            <div class="col-md-8">
                <label class="form-control">@Item.Description</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4">Done</label>
            <div class="col-md-8">
                <label class="form-control">@Item.Done</label>
            </div>
        </div>
    </div>
</div>